package cps161_FinalProject;
import java.util.Random;

public class FunkyBoard {
    private char[][] board;
    private int size;
    private Random random;

    public FunkyBoard(int size) {
        this.size = size;
        board = new char[size][size];
        random = new Random();

        // Initialize the board with '-' to represent empty spaces
        for (int i = 0; i < size; i++) {
            for (int j = 0; j < size; j++) {
                board[i][j] = '-';
            }
        }
    }

    public void placeToken(char token, int x, int y) {
        board[x][y] = token;
    }

    public char getTokenAt(int x, int y) {
        return board[x][y];
    }

    public void displayBoard() {
        for (int i = 0; i < size; i++) {
            for (int j = 0; j < size; j++) {
                System.out.print(board[i][j] + " ");
            }
            System.out.println();
        }
        System.out.println();
    }

    public FunkyToken getWinner() {
        FunkyToken winner = null;
        for (int i = 0; i < size; i++) {
            for (int j = 0; j < size; j++) {
                char token = board[i][j];
                if (token != '-' && token != '*') {
                    if (winner == null) {
                        winner = new FunkyToken(token) {
                            @Override
                            public void move(FunkyBoard board) {
                                // Winner token does not move
                            }
                        };
                    } else if (token != winner.getToken()) {
                        return null; // Multiple tokens on the board, no winner yet
                    }
                }
            }
        }
        return winner;
    }

    public int getBoardSize() {
        return size;
    }

    public void moveToken(FunkyToken token, int oldX, int oldY, int newX, int newY) {
        board[oldX][oldY] = '-';
        board[newX][newY] = token.getToken();
    }

    public int[] getRandomMove() {
        int x = random.nextInt(size);
        int y = random.nextInt(size);
        return new int[] { x, y };
    }
}
