package cps161_FinalProject;
import java.util.Random;

public class MoveOneToken extends FunkyToken {
    private int boardSize;

    public MoveOneToken(char token, int boardSize) {
        super(token);
        this.boardSize = boardSize;
        Random random = new Random();
        this.startX = random.nextInt(boardSize);
        this.startY = random.nextInt(boardSize);
    }

    @Override
    public void move(FunkyBoard board) {
        Random random = new Random();
        int x = startX;
        int y = startY;

        while (true) {
            int direction = random.nextInt(4); // 0: up, 1: down, 2: left, 3: right
            switch (direction) {
                case 0: // Up
                    x = Math.max(0, x - 1);
                    break;
                case 1: // Down
                    x = Math.min(boardSize - 1, x + 1);
                    break;
                case 2: // Left
                    y = Math.max(0, y - 1);
                    break;
                case 3: // Right
                    y = Math.min(boardSize - 1, y + 1);
                    break;
            }

            if (board.isCellEmpty(x, y)) {
                board.moveToken(this, x, y);
                break;
            }
        }
    }
}