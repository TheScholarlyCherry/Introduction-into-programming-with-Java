package cps161_FinalProject;
import java.util.ArrayList;
import java.util.List;

public class FunkyBoard {
    private char[][] board;
    private List<FunkyToken> tokens;

    public FunkyBoard(int size) {
        board = new char[size][size];
        tokens = new ArrayList<>();
    }

    public int getBoardSize() {
        return board.length;
    }

    public char getTokenAt(int x, int y) {
        if (x >= 0 && x < board.length && y >= 0 && y < board.length) {
            return board[x][y];
        }
        return '\0';
    }

    public void placeToken(FunkyToken token, int x, int y) {
        if (x >= 0 && x < board.length && y >= 0 && y < board.length) {
            board[x][y] = token.getToken();
            tokens.add(token);
        }
    }

    public FunkyToken getWinner() {
        FunkyToken lastActiveToken = null;
        for (FunkyToken token : tokens) {
            if (token.isActive()) {
                if (lastActiveToken == null) {
                    lastActiveToken = token;
                } else {
                    return null; // There are still multiple active tokens, no winner yet.
                }
            }
        }
        return lastActiveToken;
    }

    public void displayBoard() {
        for (int i = 0; i < board.length; i++) {
            for (int j = 0; j < board[i].length; j++) {
                System.out.print(board[i][j] + " ");
            }
            System.out.println();
        }
        System.out.println();
    }
}
