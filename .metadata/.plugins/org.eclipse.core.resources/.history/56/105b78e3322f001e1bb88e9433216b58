package cps161_FinalProject;
public class MoveOneToken extends FunkyToken {
    public MoveOneToken(char token) {
        super(token);
    }

    @Override
    public void move(FunkyBoard board) {
        int[] currentPosition = getRandomEmptySpot(board);
        int x = currentPosition[0];
        int y = currentPosition[1];

        int[] dx = {0, 1, 0, -1};
        int[] dy = {1, 0, -1, 0};

        for (int i = 0; i < 4; i++) {
            int newX = x + dx[i];
            int newY = y + dy[i];

            if (newX >= 0 && newX < board.getBoardSize() && newY >= 0 && newY < board.getBoardSize()) {
                claimSpot(board, newX, newY);
            }
        }
    }
}
