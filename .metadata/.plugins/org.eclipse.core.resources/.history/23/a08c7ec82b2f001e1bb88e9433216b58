package cps161_FinalProject;

import java.util.Random;

public class RandomToken extends FunkyToken {

    public RandomToken(char token) {
        super(token);
    }

    @Override
    public void move(FunkyBoard board) {
        if (!active) return;

        int currentX = board.getTokenXPosition(this);
        int currentY = board.getTokenYPosition(this);

        Random random = new Random();
        int newX = currentX + random.nextInt(3) - 1;
        int newY = currentY + random.nextInt(3) - 1;

        claimSpace(board, newX, newY);
    }
}
