package cps161_FinalProject;
public class RandomToken extends FunkyToken {

    public RandomToken(char token) {
        super(token);
    }

    @Override
    public void move(FunkyBoard board) {
        if (!isActive()) {
            return;
        }

        int x = getStartX();
        int y = getStartY();

        int newX, newY;
        do {
            newX = (int) (Math.random() * board.getSize());
            newY = (int) (Math.random() * board.getSize());
        } while (!board.isCellEmpty(newX, newY));

        board.moveToken(this, x, y, newX, newY);

        // Update the token's position
        setStartX(newX);
        setStartY(newY);
    }
}