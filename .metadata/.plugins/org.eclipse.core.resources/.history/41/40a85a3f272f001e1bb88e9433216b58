package cps161_FinalProject;
import java.util.Arrays;
import java.util.Random;

public class FunkyBoard {
    private char[][] board;
    private FunkyToken[] tokens;

    public FunkyBoard(int size) {
        board = new char[size][size];
        for (char[] row : board) {
            Arrays.fill(row, '-');
        }
    }

    public void placeToken(FunkyToken token, int x, int y) {
        board[x][y] = token.token;
    }

    public void moveToken(FunkyToken token, int x, int y) {
        char currentToken = board[x][y];
        board[x][y] = token.token;

        for (int i = 0; i < tokens.length; i++) {
            if (tokens[i].token == currentToken) {
                tokens[i].active = false;
            }
        }
    }

    public boolean isCellEmpty(int x, int y) {
        return board[x][y] == '-';
    }

    public char getCellToken(int x, int y) {
        return board[x][y];
    }

    public FunkyToken getWinner() {
        FunkyToken winner = null;
        for (FunkyToken token : tokens) {
            if (token.active) {
                if (winner == null) {
                    winner = token;
                } else {
                    return null; // There are still multiple active tokens, no winner yet.
                }
            }
        }
        return winner;
    }

    public void setTokens(FunkyToken[] tokens) {
        this.tokens = tokens;
    }

    public void displayBoard() {
        for (char[] row : board) {
            for (char cell : row) {
                System.out.print(cell + " ");
            }
            System.out.println();
        }
    }
}