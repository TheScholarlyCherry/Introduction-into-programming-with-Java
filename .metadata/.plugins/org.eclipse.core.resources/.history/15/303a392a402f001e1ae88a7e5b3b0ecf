package cps161_FinalProject;
import java.util.Random;

public class FunkyBoard {
    private int size;
    protected char[][] board;

    FunkyBoard(int size) {
        this.size = size;
        board = new char[size][size];
        initializeBoard();
    }

    private void initializeBoard() {
        for (int i = 0; i < size; i++) {
            for (int j = 0; j < size; j++) {
                board[i][j] = ' ';
            }
        }
    }

    void placeToken(FunkyToken token, int x, int y) {
        board[x][y] = token.getTokenSymbol();
    }

    void displayBoard() {
        System.out.println("------------");
        for (int i = 0; i < size; i++) {
            for (int j = 0; j < size; j++) {
                System.out.print("|" + board[i][j]);
            }
            System.out.println("|");
            System.out.println("------------");
        }
        System.out.println();
    }

    FunkyToken getWinner() {
        int activeTokens = 0;
        FunkyToken winner = null;
        for (char[] row : board) {
            for (char cell : row) {
                if (cell != ' ') {
                    if (winner == null)
                        winner = new FunkyToken(cell);
                    else if (cell != winner.getTokenSymbol())
                        return null;
                    activeTokens++;
                }
            }
        }
        if (activeTokens == 1)
            return winner;
        return null;
    }

    int getSize() {
        return size;
    }

    boolean isValidMove(int x, int y) {
        return x >= 0 && x < size && y >= 0 && y < size;
    }
}
