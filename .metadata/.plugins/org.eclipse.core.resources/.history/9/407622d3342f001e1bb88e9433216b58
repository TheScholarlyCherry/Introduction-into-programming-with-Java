package cps161_FinalProject;
import java.util.Random;

public class MoveOneToken extends FunkyToken {
    private Random random;

    public MoveOneToken(char token) {
        super(token);
        random = new Random();
    }

    @Override
    public void move(FunkyBoard board) {
        int direction = random.nextInt(4);
        int x = 0;
        int y = 0;

        switch (direction) {
            case 0: // Move left
                x--;
                break;
            case 1: // Move right
                x++;
                break;
            case 2: // Move up
                y--;
                break;
            case 3: // Move down
                y++;
                break;
        }

        while (!isValidMove(board, x, y)) {
            direction = random.nextInt(4);
            x = 0;
            y = 0;

            switch (direction) {
                case 0: // Move left
                    x--;
                    break;
                case 1: // Move right
                    x++;
                    break;
                case 2: // Move up
                    y--;
                    break;
                case 3: // Move down
                    y++;
                    break;
            }
        }

        board.placeToken(this, x, y);
    }
}
