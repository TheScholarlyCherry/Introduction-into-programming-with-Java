package cps161_FinalProject;
import java.util.Random;

public class RandomToken extends FunkyToken {
    public RandomToken(char token) {
        super(token);
    }

    @Override
    public void move(FunkyBoard board) {
        Random random = new Random();
        int x = random.nextInt(board.getBoardSize());
        int y = random.nextInt(board.getBoardSize());

        while (!board.isCellEmpty(x, y)) {
            x = random.nextInt(board.getBoardSize());
            y = random.nextInt(board.getBoardSize());
        }

        board.moveToken(this, x, y);
    }
}
