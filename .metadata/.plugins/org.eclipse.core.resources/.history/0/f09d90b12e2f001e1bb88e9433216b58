package cps161_FinalProject;
import java.util.Random;

public class MoveOneToken extends FunkyToken {
    public MoveOneToken(char token) {
        super(token);
    }

    @Override
    public void move(FunkyBoard board) {
        Random rand = new Random();
        int x = getTokenXPosition(board);
        int y = getTokenYPosition(board);

        board.removeToken(x, y);

        int direction = rand.nextInt(4);
        switch (direction) {
            case 0: // Move up
                x--;
                break;
            case 1: // Move down
                x++;
                break;
            case 2: // Move left
                y--;
                break;
            case 3: // Move right
                y++;
                break;
        }

        if (x >= 0 && x < board.getBoardSize() && y >= 0 && y < board.getBoardSize()) {
            claimSpot(board, x, y);
        }
    }
}
