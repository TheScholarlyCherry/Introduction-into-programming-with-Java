package cps161_FinalProject;
import java.util.Random;

public abstract class FunkyToken {
    protected char token;
    private boolean active;
    private Random random;

    public FunkyToken(char token) {
        this.token = token;
        this.active = true;
        this.random = new Random();
    }

    public char getToken() {
        return token;
    }

    public boolean isActive() {
        return active;
    }

    public void setActive(boolean active) {
        this.active = active;
    }

    public abstract void move(FunkyBoard board);

    public void claimSpot(FunkyBoard board, int x, int y) {
        char currentToken = board.getTokenAt(x, y);
        if (currentToken == '-' || currentToken == token) {
            board.setTokenAt(x, y, token);
        }
    }

    public boolean hasOwnedSpaces(FunkyBoard board) {
        for (int i = 0; i < board.getBoardSize(); i++) {
            for (int j = 0; j < board.getBoardSize(); j++) {
                if (board.getTokenAt(i, j) == token) {
                    return true;
                }
            }
        }
        return false;
    }

    public int[] getRandomEmptySpot(FunkyBoard board) {
        int boardSize = board.getBoardSize();
        int[] emptySpot = new int[2];

        do {
            emptySpot[0] = random.nextInt(boardSize);
            emptySpot[1] = random.nextInt(boardSize);
        } while (board.getTokenAt(emptySpot[0], emptySpot[1]) != '-');

        return emptySpot;
    }
}
