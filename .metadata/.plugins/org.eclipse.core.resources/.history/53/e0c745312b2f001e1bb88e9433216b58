package cps161_FinalProject;

public class FunkyBoard {
    private char[][] board;

    public FunkyBoard(int size) {
        board = new char[size][size];
    }

    public void placeToken(FunkyToken token, int x, int y) {
        if (x >= 0 && x < board.length && y >= 0 && y < board[x].length) {
            board[x][y] = token.getToken();
        }
    }

    public char getSpace(int x, int y) {
        return board[x][y];
    }

    public void displayBoard() {
        for (int i = 0; i < board.length; i++) {
            for (int j = 0; j < board[i].length; j++) {
                if (board[i][j] == 0) {
                    System.out.print("- ");
                } else {
                    System.out.print(board[i][j] + " ");
                }
            }
            System.out.println();
        }
    }

    public FunkyToken getWinner() {
        int countA = 0, countD = 0, countR = 0;
        for (int i = 0; i < board.length; i++) {
            for (int j = 0; j < board[i].length; j++) {
                if (board[i][j] == '@') {
                    countA++;
                } else if (board[i][j] == '$') {
                    countD++;
                } else if (board[i][j] == '&') {
                    countR++;
                }
            }
        }

        if (countA == 0 && countD == 0) {
            return new RandomToken('&');
        } else if (countA == 0 && countR == 0) {
            return new MoveOneToken('$');
        } else if (countD == 0 && countR == 0) {
            return new RandomToken('@');
        }

        return null;
    }
}

