package cps161_FinalProject;
import java.util.Random;

public class MoveOneToken extends FunkyToken {

    public MoveOneToken(char token) {
        super(token);
    }

    @Override
    public void move(FunkyBoard board) {
        int currentX = getTokenXPosition(board);
        int currentY = getTokenYPosition(board);

        int[] deltaX = { 0, 0, 1, -1 };
        int[] deltaY = { 1, -1, 0, 0 };

        int direction = new Random().nextInt(4);
        int newX = currentX + deltaX[direction];
        int newY = currentY + deltaY[direction];

        claimSpot(board, newX, newY);
    }
}
