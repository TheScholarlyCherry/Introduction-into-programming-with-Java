package cps161_FinalProject;
import java.util.Random;

public class RandomToken extends FunkyToken {
    private int boardSize;

    public RandomToken(char token, int boardSize) {
        super(token);
        this.boardSize = boardSize;
        Random random = new Random();
        this.startX = random.nextInt(boardSize);
        this.startY = random.nextInt(boardSize);
    }

    @Override
    public void move(FunkyBoard board) {
        Random random = new Random();
        int direction = random.nextInt(4); // 0: up, 1: down, 2: left, 3: right

        int newX = startX;
        int newY = startY;

        switch (direction) {
            case 0: // Up
                newX = Math.max(0, startX - 1);
                break;
            case 1: // Down
                newX = Math.min(boardSize - 1, startX + 1);
                break;
            case 2: // Left
                newY = Math.max(0, startY - 1);
                break;
            case 3: // Right
                newY = Math.min(boardSize - 1, startY + 1);
                break;
        }

        if (board.isCellEmpty(newX, newY) || board.getCell(newX, newY) == this.token) {
            board.clearCell(startX, startY);
            startX = newX;
            startY = newY;
            board.setCell(startX, startY, this.token);
        }
    }
}
