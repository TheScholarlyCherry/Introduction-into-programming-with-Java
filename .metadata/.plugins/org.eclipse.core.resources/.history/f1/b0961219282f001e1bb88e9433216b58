package cps161_FinalProject;
import java.util.Random;

public class MoveOneToken extends FunkyToken {
    public MoveOneToken(char token) {
        super(token);
    }

    @Override
    public void move(FunkyBoard board) {
        int x = getStartX();
        int y = getStartY();
        boolean moved = false;

        while (!moved) {
            Random random = new Random();
            int direction = random.nextInt(4); // 0: up, 1: down, 2: left, 3: right

            switch (direction) {
                case 0: // Up
                    x = Math.max(0, x - 1);
                    break;
                case 1: // Down
                    x = Math.min(board.getBoardSize() - 1, x + 1);
                    break;
                case 2: // Left
                    y = Math.max(0, y - 1);
                    break;
                case 3: // Right
                    y = Math.min(board.getBoardSize() - 1, y + 1);
                    break;
            }

            moved = board.moveToken(this, x, y);
        }
    }
}
