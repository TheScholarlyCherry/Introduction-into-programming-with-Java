package cps161_FinalProject;
import java.util.Random;

public abstract class FunkyToken {
    private char token;

    public FunkyToken(char token) {
        this.token = token;
    }

    public char getToken() {
        return token;
    }

    public abstract void move(FunkyBoard board);
    
    public void claimSpot(FunkyBoard board, int x, int y) {
        if (board.getTokenAt(x, y) == '-') {
            board.setTokenAt(x, y, token);
        } else if (board.getTokenAt(x, y) != token) {
            board.setTokenAt(x, y, token);
            board.setTokenAt(getTokenXPosition(board), getTokenYPosition(board), token);
        }
    }
}
