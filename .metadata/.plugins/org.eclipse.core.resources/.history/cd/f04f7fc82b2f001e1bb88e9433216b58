package cps161_FinalProject;
public abstract class FunkyToken {
    protected char token;
    protected boolean active;

    public FunkyToken(char token) {
        this.token = token;
        this.active = true;
    }

    public char getToken() {
        return token;
    }

    public boolean isActive() {
        return active;
    }

    public abstract void move(FunkyBoard board);

    // Add a method to claim a space on the board
    protected void claimSpace(FunkyBoard board, int x, int y) {
        char space = board.getSpace(x, y);
        if (space == 0 || space == token) {
            board.setSpace(x, y, token);
        }
    }
}
