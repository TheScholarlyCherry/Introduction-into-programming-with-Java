package cps161_FinalProject;

public class MoveOneToken extends FunkyToken {
    public MoveOneToken(char token) {
        super(token);
    }

    @Override
    public void move(FunkyBoard board) {
        int currentX = getTokenXPosition(board);
        int currentY = getTokenYPosition(board);

        int newX = Math.max(currentX - 1, 0);
        int newY = Math.max(currentY - 1, 0);

        if (board.getTokenAt(newX, newY) == '-') {
            placeToken(board, newX, newY);
        } else if (board.getTokenAt(newX, newY) != this.token) {
            placeToken(board, newX, newY);
            int currentXAfterMove = getTokenXPosition(board);
            int currentYAfterMove = getTokenYPosition(board);
            board.setTokenAt(currentXAfterMove, currentYAfterMove, this.token);
        }
    }
}
