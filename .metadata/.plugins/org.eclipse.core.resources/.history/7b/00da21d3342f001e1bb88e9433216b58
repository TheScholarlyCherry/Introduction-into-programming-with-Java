package cps161_FinalProject;
import java.util.Random;

public abstract class FunkyToken {
    protected char token;
    protected boolean active;

    public FunkyToken(char token) {
        this.token = token;
        this.active = true;
    }

    public char getToken() {
        return token;
    }

    public boolean isActive() {
        return active;
    }

    public void setActive(boolean active) {
        this.active = active;
    }

    public abstract void move(FunkyBoard board);

    protected boolean isValidMove(FunkyBoard board, int x, int y) {
        return x >= 0 && x < board.getBoardSize() && y >= 0 && y < board.getBoardSize() && board.getTokenAt(x, y) == ' ';
    }
}
