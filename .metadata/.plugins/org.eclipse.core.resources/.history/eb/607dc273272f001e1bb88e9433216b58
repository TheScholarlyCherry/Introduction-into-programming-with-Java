package cps161_FinalProject;

import java.util.Random;

public class MoveOneToken extends FunkyToken {
    private int startX;
    private int startY;

    public MoveOneToken(char token) {
        super(token);
    }

    @Override
    public void move(FunkyBoard board) {
        Random random = new Random();
        int boardSize = board.getBoardSize();
        int x, y;

        if (startX == 0 && startY == 0) {
            startX = random.nextInt(boardSize);
            startY = random.nextInt(boardSize);
            board.placeToken(this, startX, startY);
            return;
        }

        while (true) {
            int direction = random.nextInt(4); // 0: up, 1: down, 2: left, 3: right

            switch (direction) {
                case 0: // Up
                    x = Math.max(0, startX - 1);
                    y = startY;
                    break;
                case 1: // Down
                    x = Math.min(boardSize - 1, startX + 1);
                    y = startY;
                    break;
                case 2: // Left
                    x = startX;
                    y = Math.max(0, startY - 1);
                    break;
                case 3: // Right
                    x = startX;
                    y = Math.min(boardSize - 1, startY + 1);
                    break;
                default:
                    x = startX;
                    y = startY;
            }

            if (board.isCellEmpty(x, y)) {
                board.moveToken(this, x, y);
                startX = x;
                startY = y;
                break;
            }
        }
    }
}