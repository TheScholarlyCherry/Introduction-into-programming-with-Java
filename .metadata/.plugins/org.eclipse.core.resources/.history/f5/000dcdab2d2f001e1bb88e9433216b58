package cps161_FinalProject;
import java.util.Random;

public class FunkyBoard {
    private char[][] board;
    private int boardSize;

    public FunkyBoard(int size) {
        this.boardSize = size;
        this.board = new char[size][size];
        initializeBoard();
    }

    private void initializeBoard() {
        for (int i = 0; i < boardSize; i++) {
            for (int j = 0; j < boardSize; j++) {
                board[i][j] = '-';
            }
        }
    }

    public void placeToken(FunkyToken token, int x, int y) {
        if (isValidPosition(x, y)) {
            board[y][x] = token.getToken();
        }
    }

    private boolean isValidPosition(int x, int y) {
        return x >= 0 && x < boardSize && y >= 0 && y < boardSize && board[y][x] == '-';
    }

    public void displayBoard() {
        for (int i = 0; i < boardSize; i++) {
            for (int j = 0; j < boardSize; j++) {
                System.out.print(board[i][j] + " ");
            }
            System.out.println();
        }
        System.out.println();
    }

    public FunkyToken getWinner() {
        // Check if there is a winner and return the winning token
        // Implementation omitted for brevity.
        return null;
    }

    public int getBoardSize() {
        return boardSize;
    }

    public int getTokenXPosition(FunkyToken token) {
        for (int i = 0; i < boardSize; i++) {
            for (int j = 0; j < boardSize; j++) {
                if (board[i][j] == token.getToken()) {
                    return j;
                }
            }
        }
        return -1;
    }

    public int getTokenYPosition(FunkyToken token) {
        for (int i = 0; i < boardSize; i++) {
            for (int j = 0; j < boardSize; j++) {
                if (board[i][j] == token.getToken()) {
                    return i;
                }
            }
        }
        return -1;
    }
}
